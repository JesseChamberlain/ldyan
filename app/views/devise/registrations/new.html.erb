<div class="row">
  <div class="small-11 small-centered medium-9 medium-centered columns">
    <br/><br/><br/>
    <h1 class="title">Sign up</h1>
    <hr/>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="label-text field">
        <%= f.label :first_name, 'First Name', :class => "label-text"%>
        <%= f.text_field :first_name, required: true, autofocus: true %>
        <%= f.label :last_name, 'Last Name', :class => "label-text"%>
        <%= f.text_field :last_name, required: true, autofocus: true %>
        <%= f.label :username, 'Username', :class => "label-text"%>
        <%= f.text_field :username, required: true, autofocus: true %>
        <%= f.label :email, 'Email', :class => "label-text"%>
        <%= f.email_field :email, autofocus: true %>
      </div>

      <div class="label-text field">
        <%= f.label :password, 'Password', :class => "label-text"%>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <div class="label-text field">
        <%= f.label :password_confirmation, 'Password Confirmation', :class => "label-text"%>
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>

      <div class="actions">
        <br/>
        <button
          class="button tool-text right"
          type="submit"
          >Sign Up
        </button>
      </div>
    <% end %>

    <div class="label-text">
      <!-- <%= render "devise/shared/links" %> -->
    </div>
  </div>
</div>
