<div class="row">
  <div class="small-11 small-centered medium-9 medium-centered columns">
    <br/><br/><br/>
    <h1 class="title">Edit <%= resource_name.to_s.humanize %></h1>
    <hr/>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>

      <div class="label-text field">
        <label><span class="label-text">First Name</span></label>
        <%= f.text_field :first_name, required: true, autofocus: true %>
        <label><span class="label-text">Last Name</span></label>
        <%= f.text_field :last_name, required: true, autofocus: true %>
        <label><span class="label-text">Username</span></label>
        <%= f.text_field :username, required: true, autofocus: true %>
        <label><span class="label-text">Email</span></label>
        <%= f.email_field :email, autofocus: true %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="label-text field">
        <label><span class="label-text">Password</span></label>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <div class="label-text field">
        <label><span class="label-text">Password Confirmation</span></label>
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>

      <div class="label-textfield">
        <label><span class="label-text">Password Confirmation</span></label>
        <i>(we need your current password to confirm your changes)</i>
        <%= f.password_field :current_password, autocomplete: "off" %>
      </div>

      <div class="actions">
        <br/>
        <button
          class="button tool-text right"
          type="submit"
          >Update
        </button>
      </div>
    <% end %>

    <!-- <h3>Cancel my account</h3>

    <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

    <%= link_to "Back", :back %> -->
  </div>
</div>
